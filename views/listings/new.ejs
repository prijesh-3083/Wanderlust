<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <!-- <br> -->
                <h3>Create New Listing</h3>
                <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" placeholder="Add a catchy title" class="form-control"
                            name="listing[title]" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>
                    <!-- listing[title] this syntax makes an object of value which is gain from the req.body -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" placeholder="" class="form-control"
                            name="listing[description]" required></textarea>
                        <div class="invalid-feedback">Pease enter short description.</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image File</label>
                        <input type="file" class="form-control"
                            name="listing[image]">
                            required
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input  placeholder="1200" class="form-control" name="listing[price]" required>
                            <div class="invalid-feedback">Price should be valid.</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" placeholder="India" class="form-control" name="listing[country]" required>
                            <div class="invalid-feedback">Country name should be valid.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" placeholder="surat,rajkot,..." class="form-control" name="listing[location]" required>
                        <div class="invalid-feedback">Location should be valid.</div>
                    </div>
                    
                    <button class="btn btn-dark add-btn mt-3">Add</button>
                </form>
            </div>
        </div>
    </body>